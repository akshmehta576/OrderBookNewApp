<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="SingleItemBinding">

    </data>

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_grey_white_bg_15">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_grey_white_bg_15"
            android:elevation="4dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Maggi" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_name"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="5 x $40" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/del_btn"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="$ 200" />

                <ImageView
                    android:id="@+id/del_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="13dp"
                    />

                <RelativeLayout
                    android:id="@+id/other_taxes_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quantity"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/other_taxes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Other taxes"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <RelativeLayout
                        android:id="@+id/sgst_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/other_taxes"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/inter_semibold"
                            android:text="SGST"
                            android:textColor="#7d7d7d"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/sgst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="#7d7d7d"
                            android:textSize="12sp"
                            tools:text="2.5%" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cgst_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sgst_section"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/inter_semibold"
                            android:text="CGST"
                            android:textColor="#7d7d7d"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/cgst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="#7d7d7d"
                            android:textSize="12sp"
                            tools:text="2.5%" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/igst_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cgst_section"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/inter_semibold"
                            android:text="IGST"
                            android:textColor="#7d7d7d"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/igst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="#7d7d7d"
                            android:textSize="12sp"
                            tools:text="2.5%" />

                    </RelativeLayout>


                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>
</layout>